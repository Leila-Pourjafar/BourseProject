@model IEnumerable<Bourse.Models.SubCategories>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Symbol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AliasName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UniqueID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AliasName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                <a href="/Home/DownloadFile/@item.Id" class="btn btn-info">Download</a>|
                <a href="/Symbols/Index/@item.Id" class="btn btn-success">نمایش لیست</a>
                @*@Html.ActionLink("Download", "DownloadFile", "Home", new { id = item.Id })|*@
                @Html.ActionLink("نمایش لیست", "Index", "Symbols", new { id = item.Id })|
            </td>
        </tr>
    }

</table>
